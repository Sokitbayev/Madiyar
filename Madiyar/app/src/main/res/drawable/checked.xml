<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#777" />
                    <gradient
                        android:startColor="#1394CC"
                        android:centerColor="#1394CC"
                        android:endColor="#1394CC"
                        android:angle="270" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>


        </layer-list>
    </item>

</selector>